<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="young.tze.badgescaledanimation.MainActivity">

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startAnimation" />

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stopAnimation"
        android:layout_toRightOf="@+id/start" />


    <TextView
        android:id="@+id/app_icon"
        android:layout_width="@dimen/app_icon_container"
        android:layout_height="@dimen/app_icon_container"
        android:padding="@dimen/badge_radius"
        android:layout_centerInParent="true"
        android:maxLines="1"
        android:maxEms="4"
        android:ellipsize="end"
        android:text="@string/app_name" />

</RelativeLayout>
